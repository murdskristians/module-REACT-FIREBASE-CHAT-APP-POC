rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /conversations/{conversationId}/{allPaths=**} {
      // Allow read if user is authenticated and is a participant
      allow read: if request.auth != null &&
        request.auth.uid in get(/databases/(default)/documents/conversations/$(conversationId)).data.participants;
      
      // Allow write if user is authenticated and is a participant
      allow write: if request.auth != null &&
        request.auth.uid in get(/databases/(default)/documents/conversations/$(conversationId)).data.participants;
    }
  }
}

